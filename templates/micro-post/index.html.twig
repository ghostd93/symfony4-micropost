{% extends 'base.html.twig' %}
{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% if usersToFollow|length > 0 %}
<p>{{ 'You currently do not follow anyone, you might find these users interesting'|trans }}:</p>

        </p>
        
        {% for userToFollow in usersToFollow %}
            <a href="{{ path('micro_post_user', {'username': userToFollow.username}) }}">
                @{{ userToFollow.username }}&nbsp;
            </a>
        {% endfor %}
    {% else %}
<h6 class="border-bottom border-gray pb-2 mb-0">{{ 'Recent updates'|trans }}</h6>

        {% for post in posts %}
            {{ include('micro-post/post-template.html.twig', { 'post': post }) }}
        {% endfor %}
    {% endif %}

{% endblock %}
